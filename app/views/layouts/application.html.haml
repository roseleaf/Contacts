!!!
%html
    %head
        %title
            Contacts
        = stylesheet_link_tag "application"
        = javascript_include_tag "application"
        = csrf_meta_tags

    %body
        - if current_user
            = current_user.id
        .nav
            - if current_user
                = link_to "Edit Profile", edit_user_path(current_user.id)
                |
                = link_to "Logout", :logout
            -else
                = link_to "Register", new_user_path
                |
                = link_to "Login", :login
            
        = yield

