!!!
%html
    %head
        %title
            Contacts
        = stylesheet_link_tag "application"
        = javascript_include_tag "application"
        = csrf_meta_tags

    %body
        .nav
            - if current_user
                %a.edit= link_to "Edit Profile", edit_user_path(current_user.id)
                %a.logout= link_to "Logout", :logout
            -else
                %a.register= link_to "Register", new_user_path
                %a.login= link_to "Login", :login
        .greet
            -if current_user
                Welcome,
                =current_user.username.capitalize
        = yield


